<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:orientation="vertical"
tools:context="com.vcapp.virtualcoordinator.ItemListviewAdd"
    >

<ImageView
    android:id="@+id/image"
    android:layout_width="250dp"
    android:layout_height="150dp"
    android:layout_gravity="center"
    android:layout_marginTop="10dp"
    android:saveEnabled="true"
    android:background="#eee"
    />

<Button
    android:id="@+id/button"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="이미지 추가"
    android:background="#3CB371"
    />
<View
    android:layout_marginTop="10dp"
    android:layout_width="match_parent"
    android:layout_height="4dp"
    android:id="@+id/addView1"
    android:background="#b94757e6"/>

<View
    android:layout_marginTop="5dp"
    android:layout_width="match_parent"
    android:layout_height="4dp"
    android:background="#b94757e6"/>

<TableLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:stretchColumns="1"
    android:id="@+id/addTable1">

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="제목 :"
            android:textStyle="bold"
            android:textSize="20dp"
            android:id="@+id/addTitleText1" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:hint="내용을 입력해주세요."
            android:textSize="20dp"
            android:saveEnabled="true"
            android:id="@+id/addEditText1" />
    </TableRow>
</TableLayout>
<View
    android:layout_marginTop="10dp"
    android:layout_width="match_parent"
    android:layout_height="4dp"
    android:id="@+id/addView2"
    android:background="#b94757e6"/>

<View
    android:layout_marginTop="5dp"
    android:layout_width="match_parent"
    android:layout_height="4dp"
    android:background="#b94757e6"/>

<TableLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:stretchColumns="1"
    android:id="@+id/addTable2">

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="소개 :"
            android:textStyle="bold"
            android:textSize="20dp"
            android:id="@+id/addTitleText2" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:hint="내용을 입력하세요."
            android:textSize="20dp"
            android:saveEnabled="true"
            android:id="@+id/addEditText2" />
    </TableRow>
</TableLayout>
<View
    android:layout_marginTop="10dp"
    android:layout_width="match_parent"
    android:layout_height="4dp"
    android:id="@+id/addView3"
    android:background="#b94757e6"/>

<View
    android:layout_marginTop="5dp"
    android:layout_width="match_parent"
    android:layout_height="4dp"
    android:id="@+id/addView4"
    android:background="#b94757e6"/>

</LinearLayout>
