<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.vcapp.virtualcoordinator.ItemListviewSubAdd">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/linearLayout"
        android:layout_alignParentTop="true">

        <HorizontalScrollView
            android:layout_width="wrap_content"
            android:layout_height="120dp"
            android:id="@+id/ksHorizontalScrollView"
            android:fadeScrollbars="false"
            android:scrollbarSize="10dp"
            android:scrollbarStyle="outsideInset">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:id="@+id/ksAddImage1"
                    android:adjustViewBounds="true"
                    />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:id="@+id/ksAddImage2"
                    android:adjustViewBounds="true"
                    />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:id="@+id/ksAddImage3"
                    android:adjustViewBounds="true"
                    />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:id="@+id/ksAddImage4"
                    android:adjustViewBounds="true"
                    />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:id="@+id/ksAddImage5"
                    android:adjustViewBounds="true"
                    />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:id="@+id/ksAddImage6"
                    android:adjustViewBounds="true"
                    />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:adjustViewBounds="true"
                    android:id="@+id/ksAddImage7" />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:adjustViewBounds="true"
                    android:id="@+id/ksAddImage8" />

            </LinearLayout>
        </HorizontalScrollView>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#b94757e6"/>



        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/ksAddScrollView" >

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="이미지 추가"
                        android:background="#3CB371"
                        android:id="@+id/ksAddImageButton"/>

                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="4dp"
                    android:background="#b94757e6"/>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textSize="20sp"
                    android:text="설명"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:id="@+id/ksAddTextView1" />
                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textSize="17sp"
                    android:textColor="#000000"
                    android:hint="구체적인 설명 작성..."
                    android:id="@+id/ksAddIntro" />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="4dp"
                    android:background="#b94757e6"/>
                <View
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="4dp"
                    android:background="#b94757e6"/>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textSize="20sp"
                    android:text="관련 정보"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:id="@+id/ksAddTextView3" />
                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal"
                    android:stretchColumns="1">
                    <TableRow>
                        <TextView
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceLarge"
                            android:textSize="16sp"
                            android:text="영업 시간"
                            android:textColor="#000000"
                            android:id="@+id/ksAddTextView4" />
                        <EditText
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceLarge"
                            android:textSize="15sp"
                            android:hint="Ex) 8:00 a.m. - 10:00 p.m."
                            android:textColor="#ab000000"
                            android:id="@+id/ksAddTime" />
                    </TableRow>



                </TableLayout>
                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal"
                    android:stretchColumns="1">
                    <TableRow>
                        <TextView
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceLarge"
                            android:textSize="16sp"
                            android:text="가격 및 질"
                            android:textColor="#000000"
                            android:id="@+id/ksAddTextView6" />
                        <EditText
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceLarge"
                            android:textSize="15sp"
                            android:hint="Ex) 라운드티 - 42000원, 이쁨, 가격이 비쌈"
                            android:textColor="#ab000000"
                            android:id="@+id/ksAddDelivery" />
                    </TableRow>



                </TableLayout>
                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal"
                    android:stretchColumns="1">
                    <TableRow>
                        <TextView
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceLarge"
                            android:textSize="16sp"
                            android:text="전화번호"
                            android:textColor="#000000"
                            android:id="@+id/ksAddTextView8" />
                        <EditText
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceLarge"
                            android:textSize="18sp"
                            android:hint="Ex)xxx-xxx-xxxx"
                            android:textColor="#ab000000"
                            android:id="@+id/ksAddPhoneNum" />
                    </TableRow>
                    <TableRow>
                        <TextView
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceLarge"
                            android:textSize="16sp"
                            android:text="웹사이트"
                            android:textColor="#000000"
                            android:id="@+id/ksAddTextView10" />
                        <EditText
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceLarge"
                            android:textSize="18sp"
                            android:text="http://"
                            android:textColor="#ab000000"
                            android:id="@+id/ksAddHomepageText" />
                    </TableRow>



                </TableLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="4dp"
                    android:background="#b94757e6"/>

                <View
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="4dp"
                    android:background="#b94757e6"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textSize="20sp"
                    android:text="위치 서비스"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:id="@+id/ksAddTextView12" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:layout_weight="3"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:textSize="15sp"
                        android:textColor="#000000"
                        android:hint="Ex) 경기도 안산시 상록구 감골2로 47...."
                        android:id="@+id/ksAddAddress" />
                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="검색"
                        android:id="@+id/ksAddMapButton"/>
                </LinearLayout>

                <fragment
                    android:id="@+id/ksAddMap"
                    android:layout_width="match_parent"
                    android:layout_height="350dp"
                    android:name="com.google.android.gms.maps.MapFragment"
                    />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="4dp"
                    android:background="#b94757e6"/>

                <View
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="4dp"
                    android:background="#b94757e6"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textSize="20sp"
                    android:text="재방문 의사"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:id="@+id/ksAddTextView14" />

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textSize="17sp"
                    android:textColor="#000000"
                    android:hint="Ex) 매우만족!! or 다시는 안갈거임.."
                    android:id="@+id/ksAddOrigin" />


            </LinearLayout>
        </ScrollView>

    </LinearLayout>

</RelativeLayout>
